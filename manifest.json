{
  "manifest_version": 2,
  "name": "verv",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.4.1.min.js","content.js", "crawler.js"]
    }
  ],
  "permissions": [
    "https://connectapp.ml/",
    "https://www.connectapp.ml/",
    "https://connectapp.ml/*",
    "https://www.connectapp.ml/*",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
